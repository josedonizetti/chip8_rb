#!/usr/bin/env ruby
require 'gosu'
require 'texplay'
require 'chip8'

class GameWindow < Gosu::Window
  def initialize
    super 640, 320, false, 1
    self.caption = "chip8"

    @img = TexPlay.create_image(self, 640, 320, :color => Gosu::Color::BLACK)
  end

  def load(filename)
    program = File.open(filename, "rb") {|file| file.read }.unpack("C*")
    @vm = Chip8::VM.new(program)
  end

  def update
    @vm.step
    y = 0
    @vm.display.each do |line|
      x = 0
      line.each do |column|
        if column == 1
          @img.rect x,y, (x+10), (y+10), :color => :yellow, :fill => true
        else
          @img.rect x,y, (x+10), (y+10), :color => :black, :fill => true
        end
        x += 10
      end
      y += 10
    end
  end

  def draw
    @img.draw 0, 0,1
  end

  def button_down(id)
    puts "keydown"
    puts id
    @vm.set_key_down("k#{id}")
    @vm.key_pressed(id)
  end

  def button_up(id)
    puts "keyup"
    puts id
    @vm.set_key_up("k#{id}")
  end
end

window = GameWindow.new
window.load ARGV[0]
window.show
