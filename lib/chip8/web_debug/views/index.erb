<html>
  <head>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    </style>
    <link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.min.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/web_debug.js"></script>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">Chip8 Ruby Web Debugger</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a id="step" href="#">Step</a></li>
              <li><a id="left" href="#">Left Down</a></li>
              <li><a id="right" href="#">Right Down</a></li>
              <li><a id="space"href="#">Space Down</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Memory</li>
              <% @memory.each_with_index do |byte, index| %>
                <li style="<%= index == @current_index ? 'background-color:yellow' : '' %>">
                  <%= "0x#{(0x200 + index).to_s(16)}: 0x#{byte.to_s(16)}" %>
                </li>
              <% end %>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <div class="hero-unit">
          </div>
          <div class="row-fluid">
            <div class="span4">
              <h2>Special Registers</h2>
              <ul class="nav nav-list">
                <% @special_registers.each do |key, value| %>
                  <li>
                    <%= "#{key}: #{value}" %>
                  </li>
                <% end %>
              <ul>
            </div><!--/span-->

            <div class="span4">
              <h2>Registers</h2>
              <ul class="nav nav-list">
                <% @registers.each do |key, value| %>
                  <li>
                    <%= "v#{key}: #{value}" %>
                  </li>
                <% end %>
              </ul>
            </div><!--/span-->

            <div class="span4">
              <h2>Keyboard</h2>
              <ul class="nav nav-list">
                <% @keyboard.each do |key, value| %>
                  <li>
                    <%= "k#{key}: #{value}" %>
                  </li>
                <% end %>
              </ul>
            </div><!--/span-->

            <div class="span4">
              <h2>Stack</h2>
              <ul class="nav nav-list">
                <% @stack.each do |byte| %>
                  <li>
                    <%= "0x#{byte.to_s(16)}" %>
                  </li>
                <% end %>
              <ul>
            </div><!--/span-->
          </div><!--/row-->

        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>Â© Jose Donizetti 2014</p>
      </footer>

    </div>
  </body>
</html>
